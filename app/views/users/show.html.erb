<% provide(:title, @user.name) %>

<div class="row">
	<div class="col-md-3" id = "profile">
		<%= avatar_for @user %>
		<h1><%= @user.name %></h1>
		<%= render "components/stats" %>
		<%= render "follow_form" if signed_in? %><br>
		<%= link_to "View other SP-users", users_path %>
	</div>
	<div class="col-md-9">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
		<% end %>
	</div>
</div>