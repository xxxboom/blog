<% provide(:title, '') %>
<% if signed_in? %>
	<div class="row">
		<div class="col-md-3" id = "profile">
			<%= render 'components/user_info' %>
			<%= render 'components/stats' %>
			<%= render 'components/micropost_form' %>
		</div>

		<div class="col-md-9">
			<h3>Micropost Feed</h3>
			<%= render 'components/feed' %>
		</div>
	</div>
<% else %>
<div class="center hero-unit">
	<h1>Join to the Space Party!</h1>
	<%= link_to "Join!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>